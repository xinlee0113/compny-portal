{
  "name": "company-portal",
  "version": "1.0.0",
  "description": "公司门户网站",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --inspect=9229 src/server.js",
    "dev:debug": "nodemon --inspect-brk=9229 src/server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false",
    "test:performance": "jest tests/performance --verbose",
    "lint": "npx eslint src/**/*.js tests/**/*.js",
    "lint:fix": "npx eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test:ci",
    "quality-check": "node scripts/quality-check.js",
    "build": "npm run validate && echo 'Build successful for production'",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "dev:reset": "rm -rf node_modules package-lock.json && npm install",
    "server:prod": "NODE_ENV=production node src/server.js",
    "prepare": "husky install"
  },
  "keywords": [
    "company",
    "portal",
    "website"
  ],
  "author": "Company Development Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
