{
  "name": "company-portal",
  "version": "1.0.0",
  "description": "公司门户网站",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:https": "node src/https-server.js",
    "dev": "nodemon --inspect=9229 src/server.js",
    "dev:https": "nodemon --inspect=9229 src/https-server.js",
    "dev:debug": "nodemon --inspect-brk=9229 src/server.js",
    "dev:https:debug": "nodemon --inspect-brk=9229 src/https-server.js",
    "dev:force-https": "FORCE_HTTPS=true nodemon --inspect=9229 src/https-server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false",
    "test:performance": "jest tests/performance --verbose",
    "test:https": "HTTPS_PORT=3443 jest tests/https --verbose",
    "lint": "npx eslint src/**/*.js tests/**/*.js",
    "lint:fix": "npx eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "validate": "npm run lint && npm run test:ci",
    "quality-check": "node scripts/quality-check.js",
    "ssl:generate": "node scripts/generate-ssl.js",
    "ssl:check": "openssl x509 -in ssl/certificate.pem -text -noout",
    "db:init": "node scripts/init-database.js",
    "db:reset": "node scripts/init-database.js --reset",
    "db:stats": "node scripts/init-database.js --stats",
    "db:test": "node -e \"require('./src/config/database').testConnections().then(console.log).catch(console.error).finally(() => process.exit())\"",
    "test:e2e": "node scripts/e2e-test.js",
    "docker:start": "powershell -ExecutionPolicy Bypass -File ./scripts/start-docker.ps1",
    "db:start": "docker-compose up -d postgres redis",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres redis",
    "db:status": "docker-compose ps postgres redis",
    "build": "npm run validate && echo 'Build successful for production'",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "dev:reset": "rm -rf node_modules package-lock.json && npm install",
    "server:prod": "NODE_ENV=production node src/https-server.js",
    "server:http": "node src/server.js",
    "prepare": "husky install"
  },
  "keywords": [
    "company",
    "portal",
    "website"
  ],
  "author": "Company Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
