# 环境配置示例文件
# 复制为项目根目录的 .env 并根据需要修改配置

# 运行环境
NODE_ENV=development

# 服务器端口配置
HTTP_PORT=3000
HTTPS_PORT=3443

# HTTPS配置
FORCE_HTTPS=false
SSL_KEY_PATH=./ssl/private-key.pem
SSL_CERT_PATH=./ssl/certificate.pem

# 生产环境SSL配置（用于Let's Encrypt）
# SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem
# SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SEARCH_RATE_LIMIT_MAX=30
CONTACT_RATE_LIMIT_MAX=5

# 监控配置
MONITORING_ENABLED=true
LOG_LEVEL=info

# 数据库配置
# PostgreSQL主数据库
DB_HOST=localhost
DB_PORT=5432
DB_NAME=company_portal
DB_USER=postgres
DB_PASSWORD=company_portal_2025
DB_SSL=false

# 生产环境数据库URL（优先级更高）
# DATABASE_URL=postgresql://postgres:company_portal_2025@localhost:5432/company_portal

# Redis缓存数据库
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=company_portal_2025
REDIS_DB=0

# 生产环境Redis URL（优先级更高）
# REDIS_URL=redis://:company_portal_2025@localhost:6379/0

# 外部服务配置（未来使用）
# EMAIL_SERVICE_URL=
# EMAIL_API_KEY=

# 应用配置
APP_NAME="Company Portal"
APP_VERSION=1.0.0
APP_DESCRIPTION="车载应用开发服务公司门户网站"