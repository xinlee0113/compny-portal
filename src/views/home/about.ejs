<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= texts.about.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/"><%= texts.site.name %></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'home' ? 'active' : '' %>" href="/"><%= texts.nav.home %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'about' ? 'active' : '' %>" href="/about"><%= texts.nav.about %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'products' ? 'active' : '' %>" href="/products"><%= texts.nav.products %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'news' ? 'active' : '' %>" href="/news"><%= texts.nav.news %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= page === 'contact' ? 'active' : '' %>" href="/contact"><%= texts.nav.contact %></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-cog"></i> <%= texts.nav.systemTools %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/api/docs" target="_blank">
                                <i class="fas fa-book-open text-info me-2"></i><%= texts.nav.apiDocs %>
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/admin">
                                <i class="fas fa-user-shield text-warning me-2"></i><%= texts.nav.adminPanel %>
                            </a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><%= texts.nav.home %></a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= texts.about.title %></li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-12">
                <h1 class="mb-4"><%= texts.about.title %></h1>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><%= texts.about.overview.title %></h2>
                        <p class="card-text"><%= texts.about.overview.content %></p>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><%= texts.about.history.title %></h2>
                        <ul>
                            <% texts.about.history.items.forEach(item => { %>
                                <li><strong><%= item.year %>：</strong><%= item.content %></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><%= texts.about.culture.title %></h2>
                        <h5><%= texts.about.culture.mission.title %></h5>
                        <p><%= texts.about.culture.mission.content %></p>
                        
                        <h5><%= texts.about.culture.vision.title %></h5>
                        <p><%= texts.about.culture.vision.content %></p>
                        
                        <h5><%= texts.about.culture.values.title %></h5>
                        <ul>
                            <% texts.about.culture.values.items.forEach(value => { %>
                                <li><strong><%= value.name %>：</strong><%= value.desc %></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
                
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title"><%= texts.about.team.title %></h2>
                        <p><%= texts.about.team.content %></p>
                        <p><%= texts.about.team.training %></p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-dark text-white text-center py-4">
        <div class="container">
            <p><%= texts.site.copyright %></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

