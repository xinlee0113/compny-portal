<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= texts.news.title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- 统一导航栏 -->
    <%- include('../partials/navbar', { currentPage: 'news', texts: texts }) %>
    
    <section class="automotive-hero automotive-hero--short">
      <div class="container">
        <div class="hero-content">
          <h1 class="display-3 fw-bold text-white mb-3"><%= texts.news.title %></h1>
          <p class="lead text-white-80 mb-0">最新行业趋势与公司动态</p>
        </div>
      </div>
    </section>

    <main class="container my-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><%= texts.nav.home %></a></li>
                <li class="breadcrumb-item active" aria-current="page"><%= texts.news.title %></li>
            </ol>
        </nav>

        <h1 class="mb-4"><%= texts.news.title %></h1>
        
        <div class="row">
            <!-- 侧边栏 - 分类 -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">文章分类</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <% texts.news.categories.forEach((category, index) => { %>
                                <a href="#" class="list-group-item list-group-item-action <%= index === 0 ? 'active' : '' %>">
                                    <i class="fas fa-tag me-2"></i><%= category %>
                                    <span class="badge bg-secondary float-end"><%= index === 0 ? '2' : '1' %></span>
                                </a>
                            <% }) %>
                        </div>
                    </div>
                </div>
                
                <!-- 最新动态 -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0"><%= texts.news.latest %></h5>
                    </div>
                    <div class="card-body">
                        <% texts.news.articles.slice(0, 3).forEach(article => { %>
                            <div class="border-bottom pb-2 mb-2">
                                <a href="#" class="text-decoration-none">
                                    <small class="text-muted d-block"><%= article.date %></small>
                                    <span class="fw-bold"><%= article.title %></span>
                                </a>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            
            <!-- 主要内容区域 -->
            <div class="col-md-9">
                <% texts.news.articles.forEach(article => { %>
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h2 class="card-title h4">
                                    <a href="#" class="text-decoration-none"><%= article.title %></a>
                                </h2>
                                <span class="badge bg-primary"><%= article.category %></span>
                            </div>
                            
                            <p class="text-muted mb-2">
                                <i class="fas fa-calendar-alt me-2"></i><%= article.date %>
                            </p>
                            
                            <p class="card-text"><%= article.excerpt %></p>
                            
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-arrow-right me-1"></i><%= texts.common.readMore %>
                            </a>
                        </div>
                    </div>
                <% }) %>
                
                <!-- 分页 -->
                <nav aria-label="新闻分页">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">上一页</a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">下一页</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </main>

    <footer class="bg-dark text-white text-center py-4">
        <div class="container">
            <p><%= texts.site.copyright %></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


