<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= texts.site.title %></title>
    <meta name="description" content="<%= (texts.services && texts.services.automotiveDevelopment && texts.services.automotiveDevelopment.description) || '专业的车载应用开发服务' %>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
        }
        .capability-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            height: 100%;
        }
        .capability-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }
        .process-step {
            position: relative;
        }
        .process-step::before {
            content: '';
            position: absolute;
            left: 30px;
            top: 80px;
            width: 2px;
            height: calc(100% - 80px);
            background: #dee2e6;
            z-index: 0;
        }
        .process-step:last-child::before {
            display: none;
        }
        .step-number {
            width: 60px;
            height: 60px;
            background: #667eea;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.5rem;
            position: relative;
            z-index: 1;
        }
        .pricing-card {
            transition: transform 0.3s ease;
        }
        .pricing-card:hover {
            transform: scale(1.05);
        }
        .case-study-card {
            background: linear-gradient(45deg, #f8f9fa, #ffffff);
            border-left: 4px solid #667eea;
        }
    </style>
</head>
<body>
    <!-- 导航栏 -->
    <%- include('../partials/navbar') %>

    <!-- 英雄区域 -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4"><%= serviceData.hero.title %></h1>
                    <p class="lead mb-4"><%= serviceData.hero.subtitle %></p>
                    <div class="row">
                        <% serviceData.hero.features.forEach(feature => { %>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-warning me-2"></i>
                                <span><%= feature %></span>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    <div class="mt-4">
                        <a href="/contact" class="btn btn-warning btn-lg me-3">
                            <i class="fas fa-phone-alt me-2"></i>立即咨询
                        </a>
                        <a href="#capabilities" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-arrow-down me-2"></i>了解更多
                        </a>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="text-center">
                        <i class="fas fa-car text-warning" style="font-size: 8rem; opacity: 0.8;"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 服务能力 -->
    <section id="capabilities" class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">核心开发能力</h2>
                <p class="lead text-muted">专业的车载应用开发技术栈和解决方案</p>
            </div>
            
            <div class="row">
                <% serviceData.capabilities.forEach((capability, index) => { %>
                <div class="col-lg-4 mb-4" <% if(capability.id) { %>id="<%= capability.id %>"<% } %>>
                    <div class="card capability-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="text-center mb-3">
                                <i class="<%= capability.icon %> text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h4 class="card-title text-center mb-3"><%= capability.title %></h4>
                            <p class="card-text text-muted mb-4"><%= capability.description %></p>
                            
                            <h6 class="fw-bold mb-2">技术栈：</h6>
                            <div class="mb-3">
                                <% capability.technologies.forEach(tech => { %>
                                <span class="badge bg-light text-dark me-1 mb-1"><%= tech %></span>
                                <% }) %>
                            </div>
                            
                            <h6 class="fw-bold mb-2">核心特性：</h6>
                            <ul class="list-unstyled">
                                <% capability.features.forEach(feature => { %>
                                <li class="mb-1">
                                    <i class="fas fa-check text-success me-2"></i><%= feature %>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- 开发流程 -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">开发流程</h2>
                <p class="lead text-muted">标准化的车载应用开发流程，确保项目成功交付</p>
            </div>

            <!-- V-Model 总览 -->
            <style>
                .vmodel-diagram{position:relative; max-width:1100px; margin:0 auto 2rem auto}
                .vmodel-columns{display:flex; justify-content:space-between; gap:24px}
                .vmodel-col{flex:1; display:flex; flex-direction:column; justify-content:space-between}
                .vmodel-box{background:#fff; border:1px solid #e9ecef; border-left:4px solid #0d6efd; border-radius:8px; padding:12px 14px; box-shadow:0 2px 10px rgba(0,0,0,.04)}
                .vmodel-center{display:flex; align-items:center; justify-content:center; margin:16px 0}
                .vmodel-code{font-size:.75rem; color:#6c757d}
                .vmodel-title{margin:0; font-weight:600}
                .vmodel-arrow{position:absolute; left:50%; top:0; bottom:0; width:2px; background:linear-gradient(to bottom right, transparent 48%, #dee2e6 50%, transparent 52%) repeat-y; background-size:22px 22px; transform:translateX(-50%) rotate(45deg); pointer-events:none}
                .vmodel-arrow-r{position:absolute; left:50%; top:0; bottom:0; width:2px; background:linear-gradient(to top right, transparent 48%, #dee2e6 50%, transparent 52%) repeat-y; background-size:22px 22px; transform:translateX(-50%) rotate(-45deg); pointer-events:none}
                @media (max-width: 992px){
                    .vmodel-columns{flex-direction:column}
                    .vmodel-arrow,.vmodel-arrow-r{display:none}
                }
            </style>

            <% const dp = serviceData.developmentProcess || []; %>
            <div class="vmodel-diagram position-relative">
                <% const leftIdx = [1,2,3,4,5]; const rightIdx = [11,10,9,8,7]; %>
                <style>
                    /* 使用7列网格，让左右两侧逐步向中线(第4列)靠拢，形成清晰V字形 */
                    .vmodel-grid{display:grid; grid-template-columns: repeat(7, minmax(0,1fr)); grid-auto-rows: 90px; gap:24px; align-items:start; max-width:980px; margin:0 auto}
                    .vmodel-grid .c{grid-column:4}
                    /* 调整网格高度 */
                    /* 标准ASPICE V-Model：左臂(需求→设计)，右臂(验证←确认) */
                    /* 左臂：需求分析和设计阶段，从左上向右下 */
                    .v-l-1{grid-row:1; grid-column:1}  /* SYS.2 需求获取与系统需求分析 */
                    .v-l-2{grid-row:3; grid-column:2}  /* SYS.3 系统架构设计 */
                    .v-l-3{grid-row:5; grid-column:3}  /* SYS.4-Plan 系统集成计划 */
                    .v-l-4{grid-row:7; grid-column:4}  /* SWE.1 软件需求分析 */
                    .v-l-5{grid-row:9; grid-column:4}  /* SWE.2 软件架构设计 */
                    
                    /* 底部：实现阶段 */
                    .v-core{grid-row:11; grid-column:4} /* SWE.3 详细设计与单元实现 */
                    
                    /* 右臂：验证和确认阶段，从右下向左上 */
                    .v-r-5{grid-row:9; grid-column:4}  /* SWE.4 单元验证 */
                    .v-r-4{grid-row:7; grid-column:4}  /* SWE.5 软件集成与集成测试 */
                    .v-r-3{grid-row:5; grid-column:5}  /* SWE.6 软件确认测试 */
                    .v-r-2{grid-row:3; grid-column:6}  /* SYS.4-Do 系统集成与系统测试 */
                    .v-r-1{grid-row:1; grid-column:7}  /* SYS.5 系统确认与发布 */
                    /* 斜向虚线，仅用于视觉引导 */
                    .vline-left,.vline-right{position:absolute; width:2px; top:20px; bottom:96px; left:calc(50% - 150px); background:linear-gradient(to bottom right, transparent 48%, #e9ecef 50%, transparent 52%) repeat-y; background-size:28px 28px; transform:translateX(-50%) rotate(35deg); opacity:.6; pointer-events:none}
                    .vline-left:after,.vline-right:after{content:""; position:absolute; bottom:-8px; left:-6px; width:0; height:0; border-top:8px solid #e9ecef; border-left:6px solid transparent; border-right:6px solid transparent; transform:rotate(0)}
                    .vline-right{left:calc(50% + 150px); transform:translateX(-50%) rotate(-35deg)}
                    .vline-right:after{border-top-color:#e9ecef}
                    @media (max-width: 992px){
                        .vline-left,.vline-right{display:none}
                        .vmodel-grid{grid-template-columns:1fr}
                        .vmodel-grid .c{grid-column:auto}
                    }
                </style>
                <div class="vline-left"></div>
                <div class="vline-right"></div>
                <div class="vmodel-grid" aria-label="ASPICE V-Model">
                    <!-- 左臂：定义/设计阶段（SYS.2/SYS.3/SYS.4-Plan/SWE.1/SWE.2） -->
                    <% leftIdx.forEach(function(idx, i){ if(dp[idx]){ %>
                        <div class="vmodel-box l v-l-<%= (i+1) %>" aria-label="定义/设计阶段">
                            <div class="vmodel-code">步骤 <%= dp[idx].step %> · <%= (dp[idx].title.match(/\((.*?)\)/) || [,''])[1] %></div>
                            <p class="vmodel-title"><%= dp[idx].title.replace(/\s*\(.*?\)\s*/,'') %></p>
                        </div>
                    <% }}); %>

                    <!-- 中部底部：实现/编码（SWE.3） -->
                    <div class="vmodel-box c v-core" aria-label="实现/编码 (SWE.3)">
                        <div class="vmodel-code">步骤 <%= dp[6].step %> · SWE.3</div>
                        <p class="vmodel-title"><%= dp[6].title.replace(/\s*\(.*?\)\s*/,'') %></p>
                    </div>

                    <!-- 右臂：验证/确认阶段（SYS.5/SYS.4-Do/SWE.6/SWE.5/SWE.4） -->
                    <% rightIdx.forEach(function(idx, i){ if(dp[idx]){ %>
                        <div class="vmodel-box r v-r-<%= (i+1) %>" aria-label="验证/确认阶段">
                            <div class="vmodel-code">步骤 <%= dp[idx].step %> · <%= (dp[idx].title.match(/\((.*?)\)/) || [,''])[1] %></div>
                            <p class="vmodel-title"><%= dp[idx].title.replace(/\s*\(.*?\)\s*/,'') %></p>
                        </div>
                    <% }}); %>
                </div>
                <!-- 图例：V两侧对应关系说明 -->
                <div class="text-center mt-3 small text-muted v-legend">
                    <span class="badge bg-light text-dark me-2">左：定义/设计（SYS/SWE）</span>
                    <span class="badge bg-light text-dark me-2">底：实现/编码（SWE.3）</span>
                    <span class="badge bg-light text-dark">右：集成/验证/确认（SWE/SYS）</span>
                    <div class="mt-2">
                        <span class="me-3">SYS.4‑Plan ↔ SYS.4‑Do</span>
                        <span class="me-3">SWE.1 ↔ SWE.4</span>
                        <span class="me-3">SWE.2 ↔ SWE.5</span>
                        <span>SYS(2/3) ↔ SWE.6</span>
                    </div>
                </div>
            </div>

            <div class="text-center mb-4">
                <span class="badge bg-secondary me-2">左侧：定义/设计</span>
                <span class="badge bg-info text-dark me-2">底部：实现/编码</span>
                <span class="badge bg-success">右侧：集成/验证/确认</span>
            </div>
            
            <div class="row">
                <% serviceData.developmentProcess.forEach(process => { %>
                <div class="col-lg-12 mb-4">
                    <div class="process-step">
                        <div class="row align-items-center">
                            <div class="col-lg-1 text-center">
                                <div class="step-number">
                                    <%= process.step %>
                                </div>
                            </div>
                            <div class="col-lg-11">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8">
                                                <h5 class="card-title fw-bold"><%= process.title %></h5>
                                                <p class="card-text text-muted mb-0"><%= process.description %></p>
                                            </div>
                                            <div class="col-md-4">
                                                <h6 class="fw-bold mb-2">交付物：</h6>
                                                <% process.deliverables.forEach(deliverable => { %>
                                                <span class="badge bg-primary me-1 mb-1"><%= deliverable %></span>
                                                <% }) %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- 我们能做 / 不做 -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 fw-bold mb-3">我们能做</h3>
                            <ul class="mb-0">
                                <li>Android Automotive / QNX / Linux 车载应用开发与移植</li>
                                <li>车机系统 UI 设计与交互优化（多语言/深浅色）</li>
                                <li>CAN 总线/车载协议集成与调试</li>
                                <li>性能优化（启动/渲染/内存/稳定性）与监控上报</li>
                                <li>合规与安全加固（权限、隐私、数据加密）</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 fw-bold mb-3">不做/合作边界</h3>
                            <ul class="mb-0">
                                <li>不承诺未验证的资质与不现实的交付时间</li>
                                <li>不绕过主机厂/供应商既定流程与安全要求</li>
                                <li>不提供未经授权的第三方专有软件/资源</li>
                                <li>不以牺牲质量换取短期交付</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 典型交付物 -->
    <section class="py-5">
        <div class="container">
            <h2 class="h3 fw-bold mb-4">典型交付物</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold mb-2">技术方案与原型</h5>
                            <ul class="mb-0">
                                <li>需求澄清与技术选型报告</li>
                                <li>可交互原型/示例应用</li>
                                <li>风险评估与里程碑计划</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold mb-2">实现与测试资产</h5>
                            <ul class="mb-0">
                                <li>源代码与构建脚本</li>
                                <li>测试用例/报告（功能、性能、稳定性）</li>
                                <li>监控与日志方案</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-semibold mb-2">交付与运维资料</h5>
                            <ul class="mb-0">
                                <li>部署手册/回滚与应急预案</li>
                                <li>运维SOP/问题排查手册</li>
                                <li>培训材料与知识转移</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 成功案例 -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">成功案例</h2>
                <p class="lead text-muted">真实的项目经验和客户成功故事</p>
            </div>
            
            <div class="row">
                <% serviceData.caseStudies.forEach(caseStudy => { %>
                <div class="col-lg-6 mb-4">
                    <div class="card case-study-card h-100 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title fw-bold"><%= caseStudy.title %></h5>
                                <span class="badge bg-primary"><%= caseStudy.platform %></span>
                            </div>
                            <p class="text-muted mb-2"><strong>客户：</strong><%= caseStudy.client %></p>
                            <p class="card-text mb-4"><%= caseStudy.description %></p>
                            
                            <h6 class="fw-bold mb-2">项目成果：</h6>
                            <div class="row mb-3">
                                <% caseStudy.achievements.forEach(achievement => { %>
                                <div class="col-6 mb-2">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-trophy text-warning me-2"></i>
                                        <small><%= achievement %></small>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                            
                            <h6 class="fw-bold mb-2">技术栈：</h6>
                            <div>
                                <% caseStudy.technologies.forEach(tech => { %>
                                <span class="badge bg-light text-dark me-1 mb-1"><%= tech %></span>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- 价格方案 -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">服务方案</h2>
                <p class="lead text-muted">灵活的价格方案，满足不同规模的项目需求</p>
            </div>
            
            <div class="row justify-content-center">
                <div class="col-lg-4 mb-4">
                    <div class="card pricing-card h-100 shadow">
                        <div class="card-header bg-light text-center py-4">
                            <h4 class="card-title fw-bold"><%= serviceData.pricing.basic.name %></h4>
                            <p class="text-muted mb-0"><%= serviceData.pricing.basic.duration %></p>
                        </div>
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold text-primary mb-3"><%= serviceData.pricing.basic.price %></div>
                            <ul class="list-unstyled">
                                <% serviceData.pricing.basic.features.forEach(feature => { %>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i><%= feature %>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a href="/contact" class="btn btn-outline-primary btn-lg">选择方案</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 mb-4">
                    <div class="card pricing-card h-100 shadow border-primary">
                        <div class="card-header bg-primary text-white text-center py-4">
                            <h4 class="card-title fw-bold"><%= serviceData.pricing.professional.name %></h4>
                            <p class="mb-0 opacity-75"><%= serviceData.pricing.professional.duration %></p>
                            <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">推荐</span>
                        </div>
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold text-primary mb-3"><%= serviceData.pricing.professional.price %></div>
                            <ul class="list-unstyled">
                                <% serviceData.pricing.professional.features.forEach(feature => { %>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i><%= feature %>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a href="/contact" class="btn btn-primary btn-lg">选择方案</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-4 mb-4">
                    <div class="card pricing-card h-100 shadow">
                        <div class="card-header bg-dark text-white text-center py-4">
                            <h4 class="card-title fw-bold"><%= serviceData.pricing.enterprise.name %></h4>
                            <p class="mb-0 opacity-75"><%= serviceData.pricing.enterprise.duration %></p>
                        </div>
                        <div class="card-body text-center">
                            <div class="display-6 fw-bold text-primary mb-3"><%= serviceData.pricing.enterprise.price %></div>
                            <ul class="list-unstyled">
                                <% serviceData.pricing.enterprise.features.forEach(feature => { %>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i><%= feature %>
                                </li>
                                <% }) %>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent text-center">
                            <a href="/contact" class="btn btn-dark btn-lg">咨询方案</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA区域 -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
