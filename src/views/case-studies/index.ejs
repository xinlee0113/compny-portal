<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - <%= texts.site.title %></title>
    <meta name="description" content="楚起科技车载应用开发成功案例，展示我们在车载应用开发领域的专业实力">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
        }
        .stats-card {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            transition: transform 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
        .case-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 15px;
            overflow: hidden;
            height: 100%;
        }
        .case-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
        }
        .case-image {
            height: 200px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
        }
        .tech-badge {
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.8rem;
            margin: 2px;
        }
        .achievement-item {
            background: #f8f9fa;
            padding: 10px 15px;
            border-radius: 8px;
            margin-bottom: 8px;
            border-left: 4px solid #667eea;
        }
        .filter-btn {
            border: 2px solid #667eea;
            color: #667eea;
            background: white;
            padding: 8px 20px;
            border-radius: 25px;
            margin: 5px;
            transition: all 0.3s ease;
        }
        .filter-btn.active,
        .filter-btn:hover {
            background: #667eea;
            color: white;
        }
    </style>
</head>
<body>
    <!-- 导航栏 -->
    <%- include('../partials/navbar') %>

    <!-- 英雄区域 -->
    <section class="hero-section">
        <div class="container">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold mb-4"><%= caseStudiesData.hero.title %></h1>
                <p class="lead mb-5"><%= caseStudiesData.hero.subtitle %></p>
            </div>
            
            <!-- 统计数据 -->
            <div class="row">
                <% caseStudiesData.hero.stats.forEach(stat => { %>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="stats-card">
                        <h2 class="display-4 fw-bold text-warning mb-2"><%= stat.number %></h2>
                        <p class="mb-0 fs-5"><%= stat.label %></p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- 案例分类过滤 -->
    <section class="py-4 bg-light">
        <div class="container">
            <div class="text-center">
                <h5 class="mb-3">按类别筛选案例：</h5>
                <div class="filter-buttons">
                    <% caseStudiesData.categories.forEach((category, index) => { %>
                    <button class="btn filter-btn <%= index === 0 ? 'active' : '' %>" 
                            data-filter="<%= category.value %>">
                        <%= category.name %> (<%= category.count %>)
                    </button>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>

    <!-- 案例展示 -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <% caseStudiesData.featuredCases.forEach(caseItem => { %>
                <div class="col-lg-6 mb-5">
                    <div class="card case-card shadow">
                        <!-- 案例图片 -->
                        <div class="case-image">
                            <% if (caseItem.category === '导航应用') { %>
                                <i class="fas fa-map-marked-alt"></i>
                            <% } else if (caseItem.category === '娱乐系统') { %>
                                <i class="fas fa-music"></i>
                            <% } else if (caseItem.category === '语音交互') { %>
                                <i class="fas fa-microphone"></i>
                            <% } else if (caseItem.category === '车控系统') { %>
                                <i class="fas fa-cogs"></i>
                            <% } else { %>
                                <i class="fas fa-car"></i>
                            <% } %>
                        </div>
                        
                        <div class="card-body p-4">
                            <!-- 案例基本信息 -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h4 class="card-title fw-bold"><%= caseItem.title %></h4>
                                    <span class="badge bg-primary"><%= caseItem.category %></span>
                                </div>
                                <span class="badge bg-secondary"><%= caseItem.platform %></span>
                            </div>
                            
                            <p class="text-muted mb-2"><strong>客户：</strong><%= caseItem.client %></p>
                            <p class="card-text mb-4"><%= caseItem.description %></p>
                            
                            <!-- 项目信息 -->
                            <div class="row mb-4">
                                <div class="col-6">
                                    <small class="text-muted">项目周期</small>
                                    <div class="fw-bold"><%= caseItem.duration %></div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">团队规模</small>
                                    <div class="fw-bold"><%= caseItem.teamSize %></div>
                                </div>
                            </div>
                            
                            <!-- 技术栈 -->
                            <h6 class="fw-bold mb-2">技术栈：</h6>
                            <div class="mb-3">
                                <% caseItem.technologies.forEach(tech => { %>
                                <span class="tech-badge"><%= tech %></span>
                                <% }) %>
                            </div>
                            
                            <!-- 项目成果 -->
                            <h6 class="fw-bold mb-2">项目成果：</h6>
                            <div class="mb-4">
                                <% caseItem.achievements.forEach(achievement => { %>
                                <div class="achievement-item">
                                    <i class="fas fa-trophy text-warning me-2"></i>
                                    <small><%= achievement %></small>
                                </div>
                                <% }) %>
                            </div>
                            
                            <!-- 项目亮点 -->
                            <h6 class="fw-bold mb-2">项目亮点：</h6>
                            <ul class="list-unstyled mb-4">
                                <% caseItem.highlights.forEach(highlight => { %>
                                <li class="mb-1">
                                    <i class="fas fa-star text-warning me-2"></i>
                                    <small><%= highlight %></small>
                                </li>
                                <% }) %>
                            </ul>
                            
                            <!-- 项目范围 -->
                            <h6 class="fw-bold mb-2">项目范围：</h6>
                            <div class="row">
                                <% caseItem.projectScope.forEach(scope => { %>
                                <div class="col-6 mb-1">
                                    <small>
                                        <i class="fas fa-check text-success me-1"></i><%= scope %>
                                    </small>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent text-center">
                            <a href="/case-studies/<%= caseItem.id %>" class="btn btn-primary">
                                <i class="fas fa-eye me-2"></i>查看详情
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- 技术栈展示 -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold">核心技术栈</h2>
                <p class="lead text-muted">我们精通的车载应用开发技术</p>
            </div>
            
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="text-center">
                        <% caseStudiesData.technicalStacks.forEach(tech => { %>
                        <span class="badge bg-primary fs-6 me-2 mb-2 p-2"><%= tech %></span>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA区域 -->
    <section class="py-5 bg-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h3 class="fw-bold mb-2">想了解更多成功案例？</h3>
                    <p class="mb-0">联系我们，获取更详细的项目案例分析和技术方案</p>
                </div>
                <div class="col-lg-4 text-end">
                    <a href="/contact" class="btn btn-warning btn-lg">
                        <i class="fas fa-comments me-2"></i>联系我们
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- 页脚 -->
    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 案例过滤功能
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // 移除所有active类
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                // 添加active类到当前按钮
                this.classList.add('active');
                
                const filter = this.dataset.filter;
                // 这里可以添加实际的过滤逻辑
                console.log('Filter by:', filter);
            });
        });

        // 卡片悬停效果
        document.querySelectorAll('.case-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-10px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // 统计卡片悬停效果
        document.querySelectorAll('.stats-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
</body>
</html>